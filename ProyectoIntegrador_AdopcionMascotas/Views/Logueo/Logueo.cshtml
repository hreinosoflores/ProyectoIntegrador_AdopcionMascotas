
@{
    ViewBag.Title = "Bienvenidos";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

@using (Html.BeginForm("Log_in", "Logueo", FormMethod.Post, new { @class = "box" }))
{
    <img width="100" height="100" src="~/imagenes/logo.png" />
    <h2>@ViewBag.Title</h2>
    <input class="campotexto" name="id" placeholder="Ingrese ID de Usuario" />

    <input class="campotexto" type="password" name="pwd" placeholder="Ingrese Contraseña" />
    <input type="submit" value="Ingresar" />
    @Html.ActionLink("Crear cuenta", "Registrar", "Usuario", new { estado = true }, new {@class="link" })

    <p id="msg_incorrecto">@ViewBag.mensaje</p>
}

